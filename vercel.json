{
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/api/mcp/:brandId/:path*", "destination": "/api/mcp/[brandId]" },
    { "source": "/api/mcp/:brandId", "destination": "/api/mcp/[brandId]" },
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/((?!api/).*)", "destination": "/" }
  ]
}
